function isIsogram(str) {
  let letters = str.toLowerCase().split(""); 
  // ğŸ”¡ Convert the string to lowercase and split it into individual characters.

  for (let i = 0; i < letters.length; i++) { 
    // ğŸ” Loop through each character in the array.

    if (letters.indexOf(letters[i]) !== i) { 
      // â— If the first occurrence of the current letter isn't at this index, it's a duplicate.
      return false;
    }
  }

  return true; 
  // âœ… No duplicates found â€” it's an isogram!
}
